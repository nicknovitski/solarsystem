#navbar.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar{:data=>{:toggle=>"collapse", :target=>".nav-collapse"}}
        %img{:src=>"/img/favicon.ico"}
      %a.brand{:href=>"/#{@book.url}"}
        %img{:alt => "#{@book.title}", :height => "50", :src => "/img/#{@book.url}logo50px.png", :width => "120"}/
      .nav-collapse
        %ul.nav
          %li
            %a{:href=>"##{title.snake_case}"}= title
          - unless @chapter.sections.nil?
            - @chapter.sections.each do |section|
              %li<
                %a{:href=>'#'+section.snake_case}= section
